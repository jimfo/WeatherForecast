<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/list_item_ll"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/city_tv"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:gravity="bottom|start"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Hatboro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/country_tv"
            android:layout_weight="1"
            android:textSize="12sp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="top|start"/>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/weather_image_iv"
        android:scaleType="center"
        android:layout_weight="1.5"
        android:gravity="end|center_horizontal"
        android:src="@drawable/fewclouds"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/current_temperature_tv"
                android:textSize="20sp"
                android:layout_weight="4"
                android:gravity="center|top"
                tools:text="47 F"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/temperature_high_tv"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    tools:text="47 F"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/temperature_low_tv"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="top|center"
                    tools:text="77 F"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/weather_description_tv"
            android:layout_weight="2"
            android:gravity="end|top"
            android:textStyle="bold"
            tools:text="Cloudy"/>

    </LinearLayout>
</LinearLayout>
